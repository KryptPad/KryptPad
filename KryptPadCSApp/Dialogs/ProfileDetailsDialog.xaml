<ContentDialog
    x:Class="KryptPadCSApp.Dialogs.ProfileDetailsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KryptPadCSApp.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Models="using:KryptPadCSApp.Models"
    mc:Ignorable="d"
    Title="PROFILE DETAILS"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    PrimaryButtonCommand="{Binding SaveCommand}"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <ContentDialog.DataContext>
        <Models:ProfileDetailsDialogViewModel/>
    </ContentDialog.DataContext>

    <Grid>

        <Grid>
            <StackPanel>
                <TextBlock Text="Profile Name" />
                <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="e.g. My Passwords" />
            </StackPanel>
        </Grid>
        
    </Grid>
</ContentDialog>
