<Page xmlns:UserControls="using:KryptPadCSApp.UserControls" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KryptPadCSApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Models="using:KryptPadCSApp.Models"
    x:Class="KryptPadCSApp.Views.ItemsPage"
    mc:Ignorable="d"
    xmlns:Commanding="using:Commanding"
    x:Name="ItemsPageElement">

    <Page.DataContext>
        <Models:ItemsPageViewModel/>
    </Page.DataContext>

    <Page.BottomAppBar>
        <CommandBar Visibility="{Binding BottomAppBarVisible}">
            <AppBarButton Icon="Delete" Label="Delete Item" Command="{Binding DeleteItemCommand}" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{StaticResource AppBackgroundBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{ThemeResource AppBarBackgroundThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <CommandBar Grid.Column="1">
                <AppBarButton Icon="SelectAll" Label="Select Items" Command="{Binding ToggleSelectionMode}" />
                <AppBarButton Icon="Add" Label="Add Category" Command="{Binding AddCategoryCommand}" />
                <AppBarButton Icon="Permissions" Label="Change Password" />

                <CommandBar.SecondaryCommands>
                    <AppBarButton Icon="SaveLocal" Label="Download Profile..." />
                </CommandBar.SecondaryCommands>
            </CommandBar>

            <!--<AutoSuggestBox Grid.Column="2" Width="175"
                            
                            VerticalAlignment="Center"
                            QueryIcon="Find"
                            PlaceholderText="Search">

            </AutoSuggestBox>-->

        </Grid>

        <!--Here we define our layout for the items list.
        We need a way to switch categories, and bind the GridView to that category's items.-->
        <Pivot x:Name="CategoryPivot"
               ItemsSource="{Binding Categories}"
               SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
               Margin="12"
			   Grid.Row="1">


            <!--Define the header template-->
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </Pivot.HeaderTemplate>

            <!--Define the item template. In this case, it is just a grid view.-->
            <Pivot.ItemTemplate>
                <DataTemplate>
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" 
                                Command="{Binding DataContext.AddItemCommand, ElementName=ItemsPageElement }">
                            <SymbolIcon Symbol="Add" />
                        </Button>
                        <!--ItemClick="GridView_ItemClick"-->
                        <GridView Grid.Row="1"
                                  ItemsSource="{Binding Items}"
                                  SelectionMode="{Binding DataContext.SelectionMode, ElementName=ItemsPageElement}"
                                  IsItemClickEnabled="{Binding DataContext.IsItemClickEnabled, ElementName=ItemsPageElement}"
                                  SelectedItem="{Binding DataContext.SelectedItem, ElementName=ItemsPageElement, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Commanding:GridViewItemClickCommand.Command="{Binding DataContext.ItemClickCommand, ElementName=ItemsPageElement}"
                                  >
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Background}">
                                        <Grid Width="116" Height="116" >
                                            <StackPanel Padding="10" VerticalAlignment="Center" >
                                                <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" FontSize="32" HorizontalAlignment="Center"
                                                   Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"
                                                   Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" TextWrapping="WrapWholeWords" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </Grid>
                </DataTemplate>
            </Pivot.ItemTemplate>
        </Pivot>

        <!--Progress indicator-->
        <ProgressRing Visibility="{Binding BusyIndicatorVisibility}"
                      IsActive="{Binding IsBusy}"
                      Width="50"
                      Height="50"
                      Grid.Row="1"
                      Foreground="White"/>

    </Grid>
</Page>
