<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KryptPadCSApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Models="using:KryptPadCSApp.Models"
    x:Class="KryptPadCSApp.Views.NewItemPage"
    mc:Ignorable="d"
    Name="AddNewItemPage">

    <Page.DataContext>
        <Models:NewItemPageViewModel/>
    </Page.DataContext>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Accept" Label="Done" Command="{Binding AddItemCommand}" />
            <AppBarButton Icon="Cancel" Label="Cancel" Command="{Binding CancelCommand}" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{StaticResource AppBackgroundBrush}" Padding="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0" Padding="0,0,0,10">

            <TextBlock Text="{Binding Category.Name}" Style="{StaticResource MediumHeaderTextBlock}" />

            <TextBlock Text="Item name" />
            <TextBox Text="{Binding ItemName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     HorizontalAlignment="Left"
                     Width="250"/>

            <!--<TextBlock Text="Item type" />
            <ComboBox ItemsSource="{Binding ItemTypes}"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->

        </StackPanel>

        <!--Visibility="{Binding FieldsVisibility}"-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" 
                        HorizontalAlignment="Left">
                <!--Field list-->
                <TextBlock TextWrapping="WrapWholeWords">
                        Add fields to this profile (e.g. Username, Password, etc...)
                </TextBlock>
                <Button Command="{Binding AddFieldCommand}">Add Field</Button>
            </StackPanel>


            <!--This grid is for desktop view-->
            <!--MainGrid is responsive-->
            <Grid x:Name="MainGrid" Grid.Row="1" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid x:Name="FirstGrid" Grid.Column="0" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Style="{StaticResource MediumHeaderTextBlock}"
                                   Grid.Row="0">Fields</TextBlock>

                    <!--Custom fields-->
                    <ScrollViewer Grid.Row="1">
                        <ListBox ItemsSource="{Binding Fields}"
                              
                              >

                        </ListBox>
                    </ScrollViewer>

                </Grid>

                <Grid x:Name="SecondGrid" Grid.Column="1" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MediumHeaderTextBlock}"
                               Grid.Row="0">Notes</TextBlock>
                    <!--Notes-->
                    <TextBox x:Name="NotesTextBox"
                                 Text="{Binding Notes, Mode=TwoWay}"
                                 AcceptsReturn="True"
                                 Grid.Row="1"
                                 />


                </Grid>

            </Grid>


            <!--This grid is for mobile view-->
            <Grid x:Name="MobileGrid" Grid.Row="1">
                <Pivot>
                    <PivotItem Header="Fields">
                        
                    </PivotItem>
                    <PivotItem Header="Notes">

                    </PivotItem>
                </Pivot>
            </Grid>
            

        </Grid>


        <!--<Grid Visibility="{Binding NotesVisibility}"
              Grid.Row="1">

            <TextBox Text="{Binding Notes, Mode=TwoWay}"
                     AcceptsReturn="True"/>
        </Grid>-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="VisualStatePhone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="MainGrid.Margin" Value="0"/>
                        <Setter Target="FirstGrid.Margin" Value="0 0 0 6"/>
                        <Setter Target="SecondGrid.Margin" Value="0 6 0 0"/>
                        <Setter Target="MainGrid.RowDefinitions[1].Height" Value="*"/>
                        <Setter Target="MainGrid.ColumnDefinitions[1].Width" Value="auto"/>
                        <Setter Target="SecondGrid.(Grid.Column)" Value="0"/>
                        <Setter Target="SecondGrid.(Grid.Row)" Value="1"/>
                        <!--<Setter Target="NotesTextBox.MinHeight" Value="300" />-->
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="VisualStateTablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="MainGrid.Margin" Value="0"/>
                        <Setter Target="MainGrid.RowDefinitions[1].Height" Value="auto"/>
                        <Setter Target="MainGrid.ColumnDefinitions[1].Width" Value="*"/>
                        <Setter Target="FirstGrid.Margin" Value="0 0 6 0"/>
                        <Setter Target="SecondGrid.Margin" Value="6 0 0 0"/>
                        <Setter Target="SecondGrid.(Grid.Column)" Value="1"/>
                        <Setter Target="SecondGrid.(Grid.Row)" Value="0"/>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
